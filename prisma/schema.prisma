// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  usn       String      @unique
  pwd       String
  Authority Authority[]
}

model Plugin {
  id        String      @id
  name      String
  icon      String
  desc      String
  src       String
  Authority Authority[]
}

model Authority {
  id       Int           @id @default(autoincrement())
  userId   Int
  pluginId String
  role     DeveloperRole

  User   User   @relation(fields: [userId], references: [id])
  Plugin Plugin @relation(fields: [pluginId], references: [id])
}

enum DeveloperRole {
  OWNER
  MAINTAINER
}
